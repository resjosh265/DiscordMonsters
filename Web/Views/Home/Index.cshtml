@model HomeModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .flexContainer{
        display: flex;
        justify-content: space-evenly;
        flex-wrap: wrap;
    }

    .monsterContainer {
        border: 1px solid black;
        background-color: #ebebeb;
        margin: 15px;
        text-align: center;
    }

    .playerInfo{
        text-align: center;
        font-size: 20pt;
        font-weight: 600;
    }
</style>

<div class="playerInfo">
    <span>Discord Name: @Model.Player.DiscordId</span>&nbsp;<span>Level: @Model.Player.Level</span>
</div>

<div class="flexContainer">
    @foreach (var monster in Model.PlayerMonsterList)
    {
        <div class="monsterContainer">
            <div class="monsterName">@monster.monster.Name level @monster.playerCatch.Level</div>
            <div class="monsterImg">
                <img src="@Url.Content(monster.monster.ImageUrl)" />
            </div>
        </div>
    }
</div>

